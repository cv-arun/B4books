									<div class="top_bar_icon"><img
											src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1560918577/phone.png"
											alt=""></div><a href="tel:9207277154">+91 9207277154</a>
								</div>
								<div class="top_bar_contact_item">
									<div class="top_bar_icon"><img
											src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1560918597/mail.png"
											alt=""></div><a href="mailto:cvaruncv1998@gmail.com">contact@b4books.com</a>
								</div>
								<div class="top_bar_content ml-auto">

									<div class="top_bar_menu">
										<ul class="standard_dropdown top_bar_dropdown">
											<li><a href="/">Home</a></li>
											{{#if banner}}
											{{#if user.membershipstatus}}

											{{log user.membershipstatus}}
											<li>
												<a href="/membership">Membership Plan<i
														class="fas fa-chevron-down "></i></a>
											</li>
											{{else}}
											<li class="blink">
												<a href="/membership">Membership Plan<i
														class="fas fa-chevron-down "></i></a>
											</li>
											{{/if}}
											{{else}}
											<li>
												<a href="/membership">Membership Plan<i
														class="fas fa-chevron-down "></i></a>
											</li>
											{{/if}}

										</ul>
									</div>
									<div class="top_bar_user">
										<div class="user_icon"><img
												src="https://res.cloudinary.com/dxfq3iotg/image/upload/v1560918647/user.svg"
												alt=""></div>
										{{#if user}}
										<div><a href="/logout">Logout</a></div>
										<div>
											<p>{{user.logname}}</p>
										</div>
										{{else}}
										<div><a href="/register">Register</a></div>
										<div><a href="/login">Login</a></div>
										{{/if}}
