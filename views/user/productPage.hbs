<link rel="stylesheet" href="/stylesheets/viewUser.css">


<div class="container mtop-15">
    <div class="main-body">

        <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <!-- product image-->
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                            </ol>
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img class="d-block w-100" src="/images/product-image/{{product._id}}1.jpg"
                                        alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/images/product-image/{{product._id}}2.jpg"
                                        alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img class="d-block w-100" src="/images/product-image/{{product._id}}3.jpg"
                                        alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>

                        <!-- product image-->
                    </div>
                </div>
            </div>
            <div class="col-md-8 " style="min-height: auto;">
                <div class="card mb-3 h-100">
                    <div class="card-body h-100 d-flex flex-column">
                        <h2>{{product.title}}</h2>
                        <p>by {{product.author}}</p>
                        <hr class="mb-3">
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-md-5 mb-2">Publisher</h6>
                            </div><span class=" ml-3">{{product.publisher}}</span>

                        </div>
                        <div class="row">
                            <div class="col-9 row">

                                <div class="col-sm-3">
                                    <h6 class="mb-md-5 mb-2">Rating</h6>
                                </div>
                                <span class=" ml-3">{{star this.rating}}</span>
                            </div>
                            <div class="col-3">
                                <p class="text-center mt-2" id="{{product._id}}2"></p>
                                <button class="btn btn-primary" onclick="addToCart('{{product._id}}')">Add to
                                    cart</button>
                            </div>

                        </div>
                        <div id="descriptionTitle" class="row">
                            <button class="col-2 border border-info ml-3 btn">Description</button>
                            <button class="col-3 btn" onclick="showAuth()">About author</button>

                        </div>
                        <div id="description" class="border border-info flex-grow-1">

                            {{product.description}}
                        </div>
                        <div id="authorTitle" class="row" style="display:none">
                            <button class="col-2 ml-3 btn" onclick="show()">Description</button>
                            <button class="col-3 border border-info btn">About author</button>

                        </div>
                        <div id="author" class="border border-info flex-grow-1" style="display:none">

                            {{product.aboutAuthor}}
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>
</div>


<script>
    function showAuth() {
        document.getElementById('author').style.display = 'block'
        document.getElementById('authorTitle').style.display = 'block'
        document.getElementById('description').style.display = 'none'
        document.getElementById('descriptionTitle').style.display = 'none'

    }
    function show() {
        document.getElementById('author').style.display = 'none'
        document.getElementById('authorTitle').style.display = 'none'
        document.getElementById('description').style.display = 'block'
        document.getElementById('descriptionTitle').style.display = 'block'

    }
    document.addEventListener('DOMContentLoaded', myfunction('{{product._id}}', {{ product.rating }}))
</script>