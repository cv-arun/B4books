<section style="margin-top: 6rem;">

  <div class="d-flex">
    <a class="btn adminPrimary shadow mx-auto" href="/admin/add-newproduct" style="border:1px solid blue">Add New
      product</a>
    <a class="btn adminPrimary mx-auto shadow" href="/admin/catogory-mangement" style="border:1px solid blue">catagory
      mangement</a>
      
    <div class="d-flex ml-5"><i class="bi bi-info-square-fill" style="color:var(--adminPrimary)"></i>
      <p class="ml-3">Double click on a row to view more about product</p>
    </div>
  </div>
  <table class="table table-hover border" id="adminProductTable">
    <thead>
      <tr>
        <th>No.</th>
        <th scope="col">Product image</th>
        <th scope="col">Title</th>
        <th scope="col">stock</th>
        <th scope="col">active/inacive</th>
        <th scope="col">catagory</th>
        <th scope="col">Subcatagory</th>
        <th scope="col">Delete Product</th>
        <th scope="col">Edit Product</th>


      </tr>
    </thead>
    <tbody>
      {{#each products}}
      <tr ondblclick="location.href='/admin/prodectDetails/{{this._id}}'">
        <th class="align-middle" scope="row">{{inc1 @index}}</th>
        <td style="width: 8rem;height:8rem ;"><img style="max-width: 100%;max-height: 100%;"
            src="/images/product-image/{{this._id}}1.jpg"></td>
        <td class="align-middle">{{this.title}}</td>
        <td class="align-middle">{{this.stock}}</td>
        <td class="align-middle">{{this.activeStatus}}</td>
        <td class="align-middle">{{this.catagory.catagory}}</td>
        <td class="align-middle">{{this.subCatogory.subCatagory}}</td>
        <td class="align-middle"><a class="btn btn-danger"
            onclick="return confirm('Are you sure you want to delete : {{this.title}}')"
            href="/admin/deleteProduct/{{this._id}}"><i class="bi bi-trash3"></i></a></td>
        <td class="align-middle"><a class="btn btn-success" href="/admin/prodectUpdatePage/{{this._id}}"><i
              class="bi bi-pencil-square"></i></a></td>


      </tr>
      {{/each}}

    </tbody>
  </table>



  </div>
</section>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">



<script>
  //data table
  $(document).ready(function () {
    $('#adminProductTable').DataTable();
  });



</script>