<section style="margin-top: 6rem;">
  <h1>All Users</h1>
  <div class="d-flex justify-content-center" id="PrintTable">
    <i style="font-size:2rem" class="bi bi-printer"></i>
  </div>
  <table class="table table-hover border" id="userDataTable">
    <thead>
      <tr>
        <th scope="col">No.</th>
        <th scope="col">image</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">status</th>
        <th scope="col">verification status</th>
        <th scope="col">More abou user</th>
      </tr>
    </thead>
    <tbody>
      {{#each users}}
      <tr>
        <th class="align-middle" scope="row">{{inc1 @index}}</th>
        <td style="width: 4rem;height:4rem ;"><object style="max-width: 100%;"
            data="https://bootdey.com/img/Content/avatar/avatar7.png" type="image/png">
            <img src="" alt="">
          </object></td>
        <td class="align-middle">{{this.logname}}</td>
        <td class="align-middle">{{this.logemail}}</td>
        <td class="align-middle">
          {{#if this.status}}
          <p class="text-success">Active</p>
          {{else}}
          <p class="text-danger">Blocked</p>
          {{/if}}
        </td>
        <td class="align-middle"> {{#if this.verified}}
          <p class="text-success">Verified</p>
          {{else}}
          <p class="text-danger">Unverified</p>
          {{/if}}
        </td>
        <td class="align-middle"><a class="btn btn-primary" href="/admin/view-user/{{this._id}}">View</a></td>
      </tr>
      {{/each}}

    </tbody>
  </table>



  </div>
</section>

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">



<script>
  $(document).ready(function () {
    $('#userDataTable').DataTable();
  });

  function downloadPDFWithBrowserPrint() {
    window.print();
  }
  document.querySelector('#PrintTable').addEventListener('click', downloadPDFWithBrowserPrint);


</script>